@model LoginForm
@{Layout = null;}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>登录 - 商户系统</title>
    @(Styles.Render("~/css/login"))
</head>
<body>
    <div id="topbar"></div>
    <div id="loginbox">
        <div class="title">ZF商户管理系统</div>
        @(Html.ResultMessage())
        <form id="form" action="/auth/login" method="post">
            <div class="input-group">
                <label>用户名</label>
                <div class="input-block">
                    <input name="UserName" type="text" placeholder="请输入用户名" value="@(Model!=null?Model.UserName:String.Empty)" />
                </div>
            </div>
            <div class="input-group">
                <label>密码</label>
                <div class="input-block">
                    <input name="Password" type="password" placeholder="请输入密码" />
                </div>
            </div>
        </form>
        <div class="input-group">
            <div class="input-block">
                <button id="btnLogin" class="btn-main">登&nbsp;录</button>
            </div>
        </div>
    </div>
    <div class="clear"></div>
    <div id="copyright">
        Copyright&nbsp;&copy;&nbsp;@(DateTime.Now.Year)&nbsp;|&nbsp;Powered&nbsp;by&nbsp;ASP.NET
    </div>
    @(Scripts.Render("~/js/login"))
</body>
</html>